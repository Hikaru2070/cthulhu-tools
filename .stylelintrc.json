{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-recommended-scss",
		"stylelint-config-concentric-order"
	],
	"rules": {
		"indentation": "tab",
		"no-empty-source": null,
		"selector-pseudo-class-no-unknown": [
			true,
			{
				"ignorePseudoClasses": [
					"global",
					"local"
				]
			}
		]
	}
}