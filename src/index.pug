			meta(
				http-equiv="Content-Security-Policy",
				content="default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' blob:; media-src 'self' blob:")
		meta(name="application-name", content=title)
		meta(name="keywords", content="クトゥルフ,クトゥルフ神話,TRPG,ダイス,ステータス")
		meta(name="description", content=description)
		meta(name="author", content="F_")
		meta(name="theme-color", content="#9a0000")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name="google-site-verification", content="PM60r68q03bX342PV6uiLyLM3vOVmLC7sTb18VV83G4")
		meta(name="msvalidate.01", content="AFBF8807ECED0511D0FB21468575BB80")
		meta(name="twitter:card", content="summary")
		meta(name="twitter:site", content="@fspace_")
		meta(property="og:title", content=title)
		meta(property="og:description", content=description)
		meta(property="og:type", content="website")
		meta(property="og:url", content=baseUrl)
		meta(property="og:image", content=`${baseUrl}image/promotion.png`)
		meta(property="og:image:type", content="image/png")
		meta(property="og:image:width", content="1080")
		meta(property="og:image:height", content="1080")
		meta(property="og:image:alt", content="アプリのスクリーンショット")
		meta(property="og:locale", content="ja_JP")
		link(rel="manifest", href="/manifest.json")
		link(rel="icon", type="image/png", sizes="192x192", href="/icon/favicon.png")
		link(rel="apple-touch-icon", type="image/png", sizes="192x192", href="/icon/icon_192x192.png")
